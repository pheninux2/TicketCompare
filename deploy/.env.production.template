# ==========================================
# Variables d'Environnement - Production
# ShopTracker VPS
# ==========================================

# Application
SPRING_PROFILES_ACTIVE=prod
SERVER_PORT=8080

# Base de données PostgreSQL
DB_HOST=postgres
DB_PORT=5432
DB_NAME=shoptracker
DB_USER=shoptracker_admin
DB_PASSWORD=CHANGEZ_MOI_AVEC_MOT_DE_PASSE_GENERE

# JWT Configuration
JWT_SECRET=CHANGEZ_MOI_AVEC_SECRET_GENERE
JWT_EXPIRATION=86400000

# Admin par défaut
ADMIN_USERNAME=admin
ADMIN_PASSWORD=CHANGEZ_MOI_AVEC_MOT_DE_PASSE_GENERE

# Email Configuration (Gmail - Optionnel)
SPRING_MAIL_HOST=smtp.gmail.com
SPRING_MAIL_PORT=587
SPRING_MAIL_USERNAME=votre.email@gmail.com
SPRING_MAIL_PASSWORD=votre_app_password

# OCR Configuration (Optionnel)
TESSDATA_PREFIX=/usr/share/tessdata

# Upload Configuration
UPLOAD_DIR=/app/uploads
MAX_FILE_SIZE=10MB

# Logging
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_PHENINUX=DEBUG
LOGGING_FILE=/app/logs/shoptracker.log

# Actuator (Monitoring)
MANAGEMENT_ENDPOINTS_WEB_EXPOSURE_INCLUDE=health,info,metrics

